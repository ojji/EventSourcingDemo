{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "lib": [ "dom", "es2015" ]
    },
    "exclude": [
        "node_modules/*",
        "aot/",
        "src/app/main-aot.ts"
    ],
    "angularCompilerOptions": {
        "genDir": "aot/",
        "entryModule": "src/app/app.module#AppModule",
        "skipMetadataEmit": true
    }
}